            position: relative;
            z-index:4;
            }
            .error_count::before{
            content: " ";
            display: block;
            top:50%;
            left: 50%;
            transform: translate(-50%,-50%);
            position: absolute;
            border-radius: 50%;
            background-color: #fff;
            width: 12rem;
            height: 12rem;
            z-index: -1;
            }
            .error_count::after{
            content: " ";
            display: block;
            top:50%;
            left: 50%;
            transform: translate(-50%,-50%);
            position: absolute;
            width: 15rem;
            height: 15rem;
            border-radius: 50%;
            background-color: rgba(255, 0, 0, 0.671);
            z-index: -2;
            }
